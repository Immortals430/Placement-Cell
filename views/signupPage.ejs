<section class="authSec">
  
  <!-- sign up page -->
  <form action="/api/v1/user/createAccount" method="post">
    <h3>Sign Up</h3>
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input required type="text" class="form-control" id="username" name="username" aria-describedby="emailHelp">
      </div>
    <div class="mb-3">
      <label for="email" class="form-label">Email address</label>
      <input required type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
      <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
    </div>
    <div class="mb-3">
      <label for="password" class="form-label">Password</label>
      <input required type="password" class="form-control" id="password" name="password" >
    </div>
    <button type="submit" class="btn btn-primary">Sign up</button>
    <br><br>
    <a href="/api/v1/user/signin"><button type="button" class="btn btn-danger">Sign In</button></a>

  </form>
</section>
